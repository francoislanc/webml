{
    "name": "On-Device STT",
    "description": "On-Device STT browser extension.",
    "version": "1.0.0",
    "manifest_version": 3,
    "permissions": ["storage", "tabCapture", "offscreen", "tabs", "activeTab"],
    "action": {
        "default_title": "On-Device STT",
        "default_icon": "favicon.png",
        "default_popup": "index.html"
    },
    "icons": { 
        "16": "favicon16.png",
        "32": "favicon32.png",
        "48": "favicon48.png",
        "128": "favicon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
    },
    "background": {
    "service_worker": "background.js"
    }
}